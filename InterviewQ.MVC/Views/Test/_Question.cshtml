@model InterviewQ.MVC.Models.TestModel
@{
    var CurrentQuestion = Model.Questions.FirstOrDefault(r => r.QuestionID == Model.CurrentQuestionID);
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(r => r.CurrentQuestionID)
    <div>
        <br />
        <h4>Question @Model.CurrentQuestionID</h4>
        <hr />
        <p>@CurrentQuestion.Question</p>
    </div>
    <p>
     @if (CurrentQuestion.HasMultipleAnswers)
     {
         @Html.Partial("_MultipleAnswerQuestionView", CurrentQuestion)
     }
    </p>
    <p>
        @if (Model.CurrentQuestionID > 0 && Model.CurrentQuestionID < Model.Questions.Count)
        {
            if (Model.CurrentQuestionID > 1)
            {
                <input type="submit" class="btn btn-default" value="Previous" name="prev" />
            }

            <input type="submit" class="btn btn-default" value="Next" name="next" />
        }
        @if (Model.CurrentQuestionID == Model.Questions.Count)
        {
            <input type="submit" class="btn btn-default" value="Finish" name="finish" />
        }
    </p>
}