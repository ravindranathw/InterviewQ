@model InterviewQ.MVC.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>InterviewQ</h1>
    <p class="lead">Search for a Test</p>
    
    @using (Html.BeginForm("Index","Home", FormMethod.Post, new {@class = "form-inline", @role = "form"}))
    {
        <div class="form-group">
            @Html.LabelFor(r => r.SelectedCatagoryID, new {@class = "sr-only", @for = "testCategory"})
            @Html.DropDownListFor(r => r.SelectedCatagoryID, Model.Catagories, "Category", new {@class = "form-control", @id = "testCategory"})
        </div>
        <div class="form-group">
            @Html.Label("Number of Questions", new {@class = "sr-only", @for = "difficultyLevel"})
            @Html.TextBoxFor(r => r.NumberOfQuestions, new {@placeholder = "Questions", @type = "number", @min = "1", @max = "100", @class = "form-control cust-md-2"})
        </div>
        <div class="form-group">
            @Html.LabelFor(r => r.SelectedDifficultyLevelID, new {@class = "sr-only", @for = "difficultyLevel"})
            @Html.DropDownListFor(r => r.SelectedDifficultyLevelID, Model.DifficultyLevels, "Difficulty Level", new {@class = "form-control", @id = "difficultyLevel"})
        </div>
        <div class="form-group">
            <input name="generateTest" type="submit" class="btn btn-primary" value="Start &raquo;"/>
        </div>
    }
</div>

<div class="container">
    <h1>My form</h1>
    <p>How to make these input fields small and retain the layout.</p>
    <form role="form">
        <div>
            <div class="form-group col-lg-1">
                <label for="code">Name</label>
                <input type="text" class="form-control" />
            </div>
        </div>

        <div>
            <div class="form-group col-lg-1 ">
                <label for="code">Email</label>
                <input type="text" class="form-control input-normal" />
            </div>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </form>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Getting started</h2>
        <p>
            ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
            enables a clean separation of concerns and gives you full control over markup
            for enjoyable, agile development.
        </p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Take a Test</h2>
        <p>Hotest Test Today</p>
        <p>@Html.ActionLink("ASP.NET","Index","Tests")</p>
    </div>
    <div class="col-md-4">
        <h2>Web Hosting</h2>
        <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
    </div>
</div>